<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/dn_layout"
    android:background="#FDFCFC"
    tools:context=".DangNhap_Activity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginRight="90dp"
        android:layout_marginLeft="100dp"
        app:layout_constraintRight_toRightOf="@id/dn_layout"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="@id/dn_layout"
        app:layout_constraintTop_toTopOf="@id/dn_layout"
        android:src="@raw/logo"></ImageView>


    <EditText
        android:id="@+id/txtID"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="50dp"
        android:hint="Tên đăng nhập"
        android:textColor="#f111"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintRight_toRightOf="@id/dn_layout"
        app:layout_constraintLeft_toLeftOf="@id/dn_layout"
        ></EditText>

    <EditText
        android:id="@+id/txtPass"
        android:inputType="textPassword"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="75dp"
        android:layout_marginTop="50dp"
        android:hint="Mật khẩu"
        android:textColor="#f111"
        app:layout_constraintTop_toBottomOf="@id/txtID"
        app:layout_constraintLeft_toLeftOf="@id/dn_layout"
        app:layout_constraintRight_toRightOf="@id/dn_layout"
        ></EditText>

    <Button
        android:id="@+id/btnAccepct"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginRight="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/vien"
        app:layout_constraintRight_toRightOf="@id/dn_layout"
        app:layout_constraintLeft_toLeftOf="@id/dn_layout"
        app:layout_constraintBottom_toBottomOf="@id/dn_layout"
        android:text="Đăng nhập"
        android:textSize="20sp"
        android:textStyle="normal"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>