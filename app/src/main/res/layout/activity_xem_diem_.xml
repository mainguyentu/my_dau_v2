<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Xemdiem_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XemDiem_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/xemdiem_v1"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="@id/Xemdiem_layout"
        app:layout_constraintLeft_toLeftOf="@id/Xemdiem_layout"
        app:layout_constraintRight_toRightOf="@id/Xemdiem_layout"
        app:layout_constraintBottom_toTopOf="@id/xemdiem_layout_v2"
        android:background="@android:color/holo_blue_bright"
        >
        <ImageView
            android:id="@+id/imguser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="310dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintRight_toRightOf="@id/xemdiem_v1"
            app:layout_constraintLeft_toLeftOf="@id/xemdiem_v1"
            app:layout_constraintTop_toTopOf="@id/xemdiem_v1"
            app:layout_constraintBottom_toBottomOf="@id/xemdiem_v1"
            android:src="@android:drawable/ic_menu_camera"></ImageView>

        <TextView
            android:id="@+id/txtxemdiem_user"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="#ffff"
            android:gravity="center|left"
            android:text="ABC"
            android:textColor="#000000"
            app:layout_constraintBottom_toBottomOf="@id/xemdiem_v1"
            app:layout_constraintLeft_toRightOf="@id/imguser"
            app:layout_constraintRight_toRightOf="@id/xemdiem_v1"
            app:layout_constraintTop_toTopOf="@id/xemdiem_v1"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/xemdiem_layout_v2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="225dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toLeftOf="@id/Xemdiem_layout"
        app:layout_constraintRight_toRightOf="@id/Xemdiem_layout"
        app:layout_constraintTop_toTopOf="@id/Xemdiem_layout"
        app:layout_constraintBottom_toBottomOf="@id/Xemdiem_layout"
        tools:layout_editor_absoluteY="136dp">
        <TextView
            android:id="@+id/txthocky"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="250dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@id/xemdiem_layout_v2"
            app:layout_constraintRight_toRightOf="@id/xemdiem_layout_v2"
            app:layout_constraintLeft_toLeftOf="@id/xemdiem_layout_v2"
            app:layout_constraintBottom_toTopOf="@id/table_layout"
            android:text="Học kỳ"
            android:textSize="20sp"
            android:gravity="center"></TextView>

        <Spinner
            android:id="@+id/spnhocky"
            android:layout_height="20dp"
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintTop_toTopOf="@id/xemdiem_layout_v2"
            app:layout_constraintRight_toRightOf="@id/xemdiem_layout_v2"
            app:layout_constraintLeft_toRightOf="@id/txthocky"
            app:layout_constraintBottom_toTopOf="@id/table_layout"
            ></Spinner>
        <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="173dp"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="@id/xemdiem_layout_v2">
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtmonhoc"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:text="Môn học"
                    android:textSize="20sp"></TextView>
                <TextView
                    android:id="@+id/txtdiemlan1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Điểm lần 1"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/txtdiemlan2"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="Điểm lần 2"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"/>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtmonhoc_lan1"
                    android:layout_height="50dp"
                    android:layout_width="150dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    ></TextView>
                <TextView
                    android:id="@+id/txtdiemlan1_lan1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/txtdiemlan2_lan1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:textSize="15sp"
                    android:gravity="center"></TextView>
            </TableRow>
            <TableRow
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtmonhoc_lan2"
                    android:layout_height="50dp"
                    android:layout_width="150dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:gravity="center"></TextView>

                <TextView
                    android:id="@+id/txtdiemlan1_lan2"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textSize="15sp"></TextView>
                <TextView
                    android:id="@+id/txtdiemlan2_lan2"
                    android:layout_height="50dp"
                    android:layout_width="100dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textSize="15sp"></TextView>
            </TableRow>
            <TableRow
                android:layout_height="50dp"
                android:layout_width="match_parent"
                android:gravity="center">
                <TextView
                    android:id="@+id/txtmonhoc_lan3"
                    android:layout_height="50dp"
                    android:layout_width="150dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="20sp"
                    android:gravity="center"></TextView>
                <TextView
                    android:id="@+id/txtdiemlan1_lan3"
                    android:layout_height="50dp"
                    android:layout_width="100dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:layout_marginLeft="10dp"></TextView>
                <TextView
                    android:id="@+id/txtdiemlan2_lan3"
                    android:layout_height="50dp"
                    android:layout_width="100dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textSize="15sp"></TextView>
            </TableRow>
        </TableLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>