<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ttcngv_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TTCNGV_Activity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ttcngv_layout_v1"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        app:layout_constraintTop_toTopOf="@id/ttcngv_layout"
        app:layout_constraintLeft_toLeftOf="@id/ttcngv_layout"
        app:layout_constraintRight_toRightOf="@id/ttcngv_layout"
        app:layout_constraintBottom_toTopOf="@id/ttcngv_layout_v2"
        android:background="@android:color/holo_blue_bright"
        >
        <ImageView
            android:id="@+id/imguser"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="310dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="0dp"
            app:layout_constraintRight_toRightOf="@id/ttcngv_layout_v1"
            app:layout_constraintLeft_toLeftOf="@id/ttcngv_layout_v1"
            app:layout_constraintTop_toTopOf="@id/ttcngv_layout_v1"
            app:layout_constraintBottom_toBottomOf="@id/ttcngv_layout_v1"
            android:src="@android:drawable/ic_menu_camera"></ImageView>

        <TextView
            android:id="@+id/txtuser"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="50dp"
            android:background="#ffff"
            android:gravity="center|left"
            android:text="ABC"
            android:textColor="#f111"
            app:layout_constraintBottom_toBottomOf="@id/ttcngv_layout_v1"
            app:layout_constraintLeft_toRightOf="@id/imguser"
            app:layout_constraintRight_toRightOf="@id/ttcngv_layout_v1"
            app:layout_constraintTop_toTopOf="@id/ttcngv_layout_v1"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ttcngv_layout_v2"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_marginTop="225dp"
        android:layout_marginRight="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="0dp"
        app:layout_constraintLeft_toLeftOf="@id/ttcngv_layout"
        app:layout_constraintRight_toRightOf="@id/ttcngv_layout"
        app:layout_constraintTop_toTopOf="@id/ttcngv_layout"
        app:layout_constraintBottom_toBottomOf="@id/ttcngv_layout"
        tools:layout_editor_absoluteY="136dp">
        <TextView
            android:id="@+id/namegv"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Tên:"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="250dp"
            android:gravity="center|left"
            app:layout_constraintTop_toTopOf="@+id/ttcngv_layout_v2"
            app:layout_constraintLeft_toLeftOf="@id/ttcngv_layout_v2"
            app:layout_constraintRight_toRightOf="@id/ttcngv_layout_v2"></TextView>
        <TextView
            android:id="@+id/magv"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Mã GV:"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="250dp"
            android:gravity="center|left"
            app:layout_constraintTop_toBottomOf="@+id/namegv"
            app:layout_constraintLeft_toLeftOf="@id/ttcngv_layout_v2"
            app:layout_constraintRight_toRightOf="@id/ttcngv_layout_v2"></TextView>
        <TextView
            android:id="@+id/khoa"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Khoa:"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="250dp"
            android:gravity="center|left"
            app:layout_constraintTop_toBottomOf="@+id/magv"
            app:layout_constraintLeft_toLeftOf="@id/ttcngv_layout_v2"
            app:layout_constraintRight_toRightOf="@id/ttcngv_layout_v2"></TextView>
        <TextView
            android:id="@+id/diachi"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Địa chỉ:"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="250dp"
            android:gravity="center|left"
            app:layout_constraintTop_toBottomOf="@+id/khoa"
            app:layout_constraintLeft_toLeftOf="@id/ttcngv_layout_v2"
            app:layout_constraintRight_toRightOf="@id/ttcngv_layout_v2"></TextView>
        <TextView
            android:id="@+id/phonegv"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Điện thoại:"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="250dp"
            android:gravity="center|left"
            app:layout_constraintTop_toBottomOf="@+id/diachi"
            app:layout_constraintLeft_toLeftOf="@id/ttcngv_layout_v2"
            app:layout_constraintRight_toRightOf="@id/ttcngv_layout_v2"></TextView>

        <TextView
            android:id="@+id/txt_namegv_v2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="60dp"
            android:hint="tên"
            android:gravity="center|left"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintLeft_toRightOf="@id/namegv"
            app:layout_constraintTop_toTopOf="@+id/ttcngv_layout_v2"></TextView>
        <TextView
            android:id="@+id/txt_magv_v2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:hint="mã giảng viên"
            android:gravity="center|left"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@id/magv"
            app:layout_constraintRight_toRightOf="@id/ttcngv_layout_v2"
            app:layout_constraintTop_toBottomOf="@+id/txt_namegv_v2"></TextView>
        <TextView
            android:id="@+id/txt_khoagv_v2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:hint="khoa"
            android:gravity="center|left"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@id/khoa"
            app:layout_constraintRight_toRightOf="@id/ttcngv_layout_v2"
            app:layout_constraintTop_toBottomOf="@+id/txt_magv_v2"></TextView>
        <TextView
            android:id="@+id/txt_diachi_v2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:hint="địa chỉ"
            android:gravity="center|left"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@id/diachi"
            app:layout_constraintRight_toRightOf="@id/ttcngv_layout_v2"
            app:layout_constraintTop_toBottomOf="@+id/txt_khoagv_v2"></TextView>
        <TextView
            android:id="@+id/txt_phonegv_v2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="60dp"
            android:hint="số điện thoại"
            android:gravity="center|left"
            android:textSize="20sp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintLeft_toRightOf="@id/phonegv"
            app:layout_constraintRight_toRightOf="@id/ttcngv_layout_v2"
            app:layout_constraintTop_toBottomOf="@+id/txt_diachi_v2"></TextView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>